<?xml version="1.0" encoding="utf-8"?>
<ca.cours5b5.guillaumegagnon.vues.VPartieAI xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.cours5b5.guillaumegagnon.activites.APartieAI">

    <ca.cours5b5.guillaumegagnon.vues.VGrille
        android:id="@+id/grille_ai"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ca.cours5b5.guillaumegagnon.vues.VGrille>

    <TextView
        android:id="@+id/texte_joueur_un_ai"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/joueur1"
        android:gravity="center"
        android:background="@color/ROUGE_FOND"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/grille_ai"
        app:layout_constraintStart_toStartOf="@id/grille_ai"
        app:layout_constraintTop_toBottomOf="@id/grille_ai" />

    <TextView
        android:id="@+id/texte_joueur_deux_ai"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/joueur2"
        android:gravity="center"
        android:background="@color/JAUNE_FOND"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/grille_ai"
        app:layout_constraintStart_toStartOf="@id/grille_ai"
        app:layout_constraintTop_toBottomOf="@id/grille_ai" />

</ca.cours5b5.guillaumegagnon.vues.VPartieAI>
